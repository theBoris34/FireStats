        <TextBlock IsHitTestVisible="False" FontSize="14" Text="Владелец объекта"
            Grid.Row="1" Margin="324,117,25,0" VerticalAlignment="Top" Foreground="#FF8C8E93" Height="19">
            <TextBlock.Style>
